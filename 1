<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Nomination Page</title>
  <style>
    body { font-family: Arial, sans-serif; }
    input, button { margin: 5px; padding: 5px; }
  </style>
  <script>
    // Mock function to send OTP (just an alert)
    function sendOTP() {
      let email = document.getElementById("email").value;
      if (email) {
        alert("OTP has been sent to your email: " + email);
      } else {
        alert("Please enter a valid email address.");
      }
    }

    // Store email and OTP entered in browser's memory
    function submitNomination() {
      let email = document.getElementById("email").value;
      let otp = document.getElementById("otp").value;
      if (otp === "1234") {  // Simulate OTP check
        localStorage.setItem("nomineeEmail", email); // Save nomination
        alert("Nomination submitted successfully!");
        window.location.href = "feedback.html"; // Redirect to feedback page
      } else {
        alert("Invalid OTP. Please check and try again.");
      }
    }
  </script>
</head>
<body>
  <h1>Nomination Page</h1>
  <form>
    Email ID: <input type="email" id="email" required><br><br>
    <button type="button" onclick="sendOTP()">Send OTP</button><br><br>
    Enter OTP: <input type="text" id="otp" placeholder="Enter OTP" required><br><br>
    <button type="button" onclick="submitNomination()">Submit Nomination</button>
  </form>
</body>
</html>
