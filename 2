<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Feedback Page</title>
  <style>
    body { font-family: Arial, sans-serif; }
    input, textarea, button { margin: 5px; padding: 5px; }
  </style>
  <script>
    function submitFeedback() {
      let feedbackEmail = document.getElementById("feedbackEmail").value;
      let feedbackText = document.getElementById("feedback").value;
      if (feedbackEmail && feedbackText) {
        localStorage.setItem("feedbackEmail", feedbackEmail);
        localStorage.setItem("feedbackText", feedbackText);
        alert("Feedback submitted successfully!");
      } else {
        alert("Please fill in all fields.");
      }
    }
  </script>
</head>
<body>
  <h1>Feedback Page</h1>
  <form>
    Email ID: <input type="email" id="feedbackEmail" required><br><br>
    Feedback: <textarea id="feedback" placeholder="Your feedback here" required></textarea><br><br>
    <button type="button" onclick="submitFeedback()">Submit Feedback</button>
  </form>
</body>
</html>
